
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DapperLayout.cshtml";
}


<style>
    .chart-container {
        width: 100%;
        height: 400px;
        margin-bottom: 20px;
    }
</style>

<h1>Dashboard</h1>

<div class="row">
    <div class="col-12">
        <div class="row">
            <!-- Stacked Bar Chart -->
            <div class="col-lg-6 col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Yıllara Göre Yakıt Dağılımı</h4>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="stackedBarChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Gradient Bar Chart -->
            <div class="col-lg-6 col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Markalara Göre Araç Sayısı</h4>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="gradientBarChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Basic Bar Chart -->
            <div class="col-lg-6 col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Yakıt Tipi Dağılımı</h4>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="basicBarChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Basic Line Chart -->
            <div class="col-lg-6 col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Aylara Göre Araç Kayıt Sayısı</h4>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="basicLineChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Gradient Line Chart -->
            <div class="col-lg-6 col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Markaların Aylık Araç Kayıt Sayıları</h4>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="gradientLineChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Dual Line Chart -->
            <div class="col-lg-6 col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Yıllara Göre Benzin ve Dizel Araç Sayıları</h4>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="dualLineChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Basic Area Chart -->
            <div class="col-lg-6 col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Yıllara Göre Toplam Araç Kayıt Sayısı</h4>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="basicAreaChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Gradient Area Chart -->
            <div class="col-lg-6 col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Yıllara Göre En Çok Kayıt Edilen Yakıt Tipleri</h4>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="gradientAreaChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pie Chart -->
            <div class="col-lg-6 col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Renk Dağılımı</h4>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="pieChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Radar Chart -->
            <div class="col-lg-6 col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Kategoriye Göre Araç Sayıları</h4>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="radarChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Stacked Bar Chart
        var stackedBarCtx = document.getElementById('stackedBarChart').getContext('2d');
        var stackedBarChart = new Chart(stackedBarCtx, {
            type: 'bar',
            data: {
                labels: ['2020', '2021', '2022', '2023'],
                datasets: [{
                    label: 'Benzin',
                    data: [120, 150, 180, 200],
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }, {
                    label: 'Dizel',
                    data: [80, 90, 100, 110],
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }, {
                    label: 'Elektrik',
                    data: [30, 40, 50, 60],
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    x: {
                        stacked: true
                    },
                    y: {
                        stacked: true
                    }
                }
            }
        });

        // Gradient Bar Chart
        var gradientBarCtx = document.getElementById('gradientBarChart').getContext('2d');
        var gradient = gradientBarCtx.createLinearGradient(0, 0, 0, 400);
        gradient.addColorStop(0, 'rgba(255, 99, 132, 0.8)');
        gradient.addColorStop(1, 'rgba(54, 162, 235, 0.8)');
        var gradientBarChart = new Chart(gradientBarCtx, {
            type: 'bar',
            data: {
                labels: ['Toyota', 'Ford', 'BMW', 'Mercedes'],
                datasets: [{
                    label: 'Araç Sayısı',
                    data: [200, 150, 100, 120],
                    backgroundColor: gradient,
                    borderColor: gradient,
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Basic Bar Chart
        var basicBarCtx = document.getElementById('basicBarChart').getContext('2d');
        var basicBarChart = new Chart(basicBarCtx, {
            type: 'bar',
            data: {
                labels: ['Benzin', 'Dizel', 'Elektrik', 'Hibrit'],
                datasets: [{
                    label: 'Yakıt Tipi Dağılımı',
                    data: [300, 200, 50, 100],
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Basic Line Chart
        var basicLineCtx = document.getElementById('basicLineChart').getContext('2d');
        var basicLineChart = new Chart(basicLineCtx, {
            type: 'line',
            data: {
                labels: ['Ocak', 'Şubat', 'Mart', 'Nisan', 'Mayıs'],
                datasets: [{
                    label: 'Araç Kayıt Sayısı',
                    data: [120, 150, 180, 200, 220],
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1,
                    fill: false
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Gradient Line Chart
        var gradientLineCtx = document.getElementById('gradientLineChart').getContext('2d');
        var gradientLineChart = new Chart(gradientLineCtx, {
            type: 'line',
            data: {
                labels: ['Ocak', 'Şubat', 'Mart', 'Nisan', 'Mayıs'],
                datasets: [{
                    label: 'Toyota',
                    data: [50, 60, 70, 80, 90],
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1,
                    fill: false
                }, {
                    label: 'Ford',
                    data: [40, 50, 60, 70, 80],
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1,
                    fill: false
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Dual Line Chart
        var dualLineCtx = document.getElementById('dualLineChart').getContext('2d');
        var dualLineChart = new Chart(dualLineCtx, {
            type: 'line',
            data: {
                labels: ['2020', '2021', '2022', '2023'],
                datasets: [{
                    label: 'Benzin',
                    data: [120, 150, 180, 200],
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1,
                    fill: false
                }, {
                    label: 'Dizel',
                    data: [80, 90, 100, 110],
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1,
                    fill: false
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Basic Area Chart
        var basicAreaCtx = document.getElementById('basicAreaChart').getContext('2d');
        var basicAreaChart = new Chart(basicAreaCtx, {
            type: 'line',
            data: {
                labels: ['2020', '2021', '2022', '2023'],
                datasets: [{
                    label: 'Toplam Araç Kayıt Sayısı',
                    data: [300, 400, 500, 600],
                    borderColor: 'rgba(75, 192, 192, 1)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderWidth: 1,
                    fill: true
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Gradient Area Chart
        var gradientAreaCtx = document.getElementById('gradientAreaChart').getContext('2d');
        var gradient = gradientAreaCtx.createLinearGradient(0, 0, 0, 400);
        gradient.addColorStop(0, 'rgba(255, 99, 132, 0.8)');
        gradient.addColorStop(1, 'rgba(54, 162, 235, 0.8)');
        var gradientAreaChart = new Chart(gradientAreaCtx, {
            type: 'line',
            data: {
                labels: ['2020', '2021', '2022', '2023'],
                datasets: [{
                    label: 'En Çok Kayıt Edilen Yakıt Tipleri',
                    data: [120, 150, 180, 200],
                    borderColor: 'rgba(255, 99, 132, 1)',
                    backgroundColor: gradient,
                    borderWidth: 1,
                    fill: true
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Pie Chart
        var pieCtx = document.getElementById('pieChart').getContext('2d');
        var pieChart = new Chart(pieCtx, {
            type: 'pie',
            data: {
                labels: ['Kırmızı', 'Mavi', 'Yeşil', 'Sarı'],
                datasets: [{
                    label: 'Renk Dağılımı',
                    data: [30, 20, 15, 35],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.8)',
                        'rgba(54, 162, 235, 0.8)',
                        'rgba(75, 192, 192, 0.8)',
                        'rgba(255, 206, 86, 0.8)'
                    ],
                    borderWidth: 1
                }]
            }
        });

        // Radar Chart
        var radarCtx = document.getElementById('radarChart').getContext('2d');
        var radarChart = new Chart(radarCtx, {
            type: 'radar',
            data: {
                labels: ['SUV', 'Sedan', 'Hatchback', 'Coupe'],
                datasets: [{
                    label: 'Araç Sayısı',
                    data: [120, 150, 180, 200],
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    r: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
